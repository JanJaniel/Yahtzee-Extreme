<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="581.0" prefWidth="501.0" styleClass="anchorPane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.yahtzeeextreme.YahtzeeController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>



    <children>

        <HBox layoutX="103.0" layoutY="47.0" prefHeight="51.0" prefWidth="295.0" spacing="10.0" styleClass="dice-hbox">
            <Button fx:id="dice1Button" onAction="#toggleDice1Button" prefHeight="51.0" prefWidth="51.0" styleClass="button-in-hbox" text="">
            <font>
               <Font size="24.0" />
            </font></Button>
            <Button fx:id="dice2Button" onAction="#toggleDice2Button" prefHeight="51.0" prefWidth="51.0" styleClass="button-in-hbox" text="">
            <font>
               <Font size="24.0" />
            </font></Button>
            <Button fx:id="dice3Button" onAction="#toggleDice3Button" prefHeight="51.0" prefWidth="51.0" styleClass="button-in-hbox" text="">
            <font>
               <Font size="24.0" />
            </font></Button>
            <Button fx:id="dice4Button" onAction="#toggleDice4Button" prefHeight="51.0" prefWidth="51.0" styleClass="button-in-hbox" text="">
            <font>
               <Font size="24.0" />
            </font></Button>
            <Button fx:id="dice5Button" onAction="#toggleDice5Button" prefHeight="51.0" prefWidth="51.0" styleClass="button-in-hbox" text="">
            <font>
               <Font size="24.0" />
            </font></Button>
        </HBox>




        <Button layoutX="64.0" layoutY="516.0" mnemonicParsing="false" onAction="#switchToMainMenu" styleClass="endGame" text="End Game" />

        <!-- TableView -->
        <TableView fx:id="gameTable" layoutX="100.0" layoutY="126.0" prefHeight="300.0" prefWidth="295.0" styleClass="table">
         <columns>
            <TableColumn fx:id="categoryColumn" prefWidth="95.0" text="Categegory" />
            <TableColumn fx:id="scoreColumn" prefWidth="100.0" text="Player 1" />
             <TableColumn fx:id="score2Column" prefWidth="100.0" text="Player 2" />

         </columns></TableView>
         <Button layoutX="208.0" layoutY="456.0" onAction="#rollDice" prefHeight="85.0" prefWidth="85.0" styleClass="roll" text="roll dices" />
    </children>
</AnchorPane>
